    <!-- Main Container -->
    <div class="container">
      

        <%- include('partials/user/profileSidebar') %>        

        <!-- Main Content -->
        <main class="main-content">
            <div class="wallet-header">
                <h2>My Wallet</h2>
                <a href="#profile" class="back-link">Back to Profile</a>
            </div>

            <!-- Wallet Balance -->
            <div class="balance-card">
                <p class="balance-text">Your current wallet balance is</p>
                <div class="balance-amount">
                    <span class="currency-symbol">‚Çπ</span> <%=walletData.balance%>
                </div>
            </div>

            <!-- Wallet Transactions -->

            <div style="background-color: #3b5d50; color: white; padding: 16px 24px; border-radius: 10px; margin-bottom: 20px; text-align: center; animation: fadeIn 0.8s ease-in-out;">
                <h2 style="margin: 0; font-size: 24px;">Transactions</h2>
                <p style="margin: 4px 0 0; font-size: 14px;">A history of your wallet activity</p>
            </div>
            <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(val => { %>
                    <div class="transaction-item" style="margin-bottom: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 8px; animation: fadeIn 0.5s ease-in-out;">
                        <span class="transaction-description" style="color: #3b5d50; font-weight: 500;">
                            <%= val.description.replace(/[0-9]/g, '') %> - <%= val.transactionId %>
                        </span><br/>
                        <span class="transaction-amount" style="color: <%= val.type === 'credit' ? '#28a745' : '#d9534f' %>; font-size: 16px; font-weight: bold;">
                            <%= val.type === 'credit' ? '+' : '-' %>‚Çπ <%= val.amount.toFixed(2) %>
                        </span>
                    </div>
                <% }) %>
            <% } else { %>
                <p style="color: #3b5d50;">No transactions available.</p>
            <% } %>
            
            
            <div class="pagination" style="margin-top: 20px; text-align: center;">
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>" style="margin: 0 5px; padding: 8px 16px; background-color: #3b5d50; color: white; border-radius: 5px; text-decoration: none;">Previous</a>
                <% } %>
            
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %>"
                       style="margin: 0 3px; padding: 8px 12px; border-radius: 5px; text-decoration: none;
                              <%= currentPage === i ? 'background-color: #3b5d50; color: white;' : 'border: 1px solid #3b5d50; color: #3b5d50;' %>">
                       <%= i %>
                    </a>
                <% } %>
            
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>" style="margin: 0 5px; padding: 8px 16px; background-color: #3b5d50; color: white; border-radius: 5px; text-decoration: none;">Next</a>
                <% } %>
