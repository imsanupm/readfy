    background-color: var(--white-color);
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: 5px;
    transition: all 0.3s;
    cursor: pointer;
  }
  
  .action-button:hover {
    background-color: var(--primary-color);
    color: var(--white-color);
    border-color: var(--primary-color);
  }
  
