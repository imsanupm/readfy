                }
            
                .form-group label {
                  display: block;
                  margin-bottom: 5px;
                  font-weight: 500;
                  color: #333;
                }
            
                .form-control {
                  width: 100%;
                  padding: 10px;
                  border: 1px solid #ddd;
                  border-radius: 4px;
                  font-size: 1rem;
                }
            
                .form-control:focus {
