		<!-- Product Listings -->
		<% products.forEach(function(product) { %>
		  <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
			<a class="product-item" href="/productDetailPage/<%= product._id %>">
			  <img src="<%= product.productImage[0] %>" class="img-fluid product-thumbnail" alt="<%= product.productTitle %>">
			  <h3 class="product-title"><%= product.productTitle %></h3>
			  
			  <!-- Product Rating -->
			  <div class="product-rating mb-2">
				<% for(let i = 1; i <= 5; i++) { %>
				  <% if(i <= product.rating) { %>
					<span class="star filled">★</span>
				  <% } else { %>
					<span class="star">☆</span>
				  <% } %>
				<% } %>
				<span class="rating-count">(<%= product.reviewCount %>)</span>
			  </div>
			  
			  <!-- Product Price Section -->
			  <div class="product-price-section">
				<% if(product.productOffr > 0) { %>
				  <span class="original-price">$<%= product.originalPrice.toFixed(2) %></span>
				  <strong class="product-price">$<%= product.finalPrice.toFixed(2) %></strong>
				  <span class="discount-badge">-<%= product.discount %>%</span>
				<% } else { %>
				  <strong class="product-price">$<%= product.regularPrice.toFixed(2) %></strong>
				<% } %>
			  </div>
			  
			  <!-- Product Labels -->
			  <% if(product.labels && product.labels.length > 0) { %>
				<div class="product-labels">
				  <% product.labels.forEach(function(label) { %>
					<span class="label <%= label.type %>"><%= label.text %></span>
				  <% }); %>
				</div>
			  <% } %>
			  
			  <!-- Available Colors Section (if applicable) -->
			  <% if(product.colors && product.colors.length > 0) { %>
				<div class="product-colors mt-2">
				  <% product.colors.forEach(function(color) { %>
					<span class="color-dot" style="background-color: <%= color.code %>" title="<%= color.name %>"></span>
				  <% }); %>
				</div>
			  <% } %>
			  
			  <!-- Add to Cart Icon -->
			  <span class="icon-cross">
				<img src="/images/cross.svg" class="img-fluid">
			  </span>
			</a>
		  </div>
		<% }); %>
		<!-- End Product Listings -->
