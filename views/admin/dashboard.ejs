<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Chart.js code
    const ctx = document.getElementById('salesChart').getContext('2d');
    const chartData = <%- JSON.stringify(chartData) %>;

    const labels = chartData.map(item => {
        const month = item._id.month.toString().padStart(2, '0');
        return `${month}-${item._id.year}`;
    });

    const data = chartData.map(item => item.totalAmount);

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Total Revenue (â‚¹)',
                data: data,
                backgroundColor: '#3b5d50'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return 'â‚¹' + value.toLocaleString();
                        }
                    }
                }
            }
        }
    });

    // Custom date submission function
    function submitCustomDate() {
        const startDate = document.querySelector('input[name="startDate"]').value;
        const endDate = document.querySelector('input[name="endDate"]').value;
        
        if (!startDate || !endDate) {
            alert('Please select both start and end dates');
            return;
        }
        
        if (new Date(startDate) > new Date(endDate)) {
            alert('Start date cannot be later than end date');
            return;
        }
        
        // Create URL with query parameters
        const url = new URL(window.location.origin + '/admin/dashboard');
        url.searchParams.set('filterType', 'custom');
        url.searchParams.set('startDate', startDate);
        url.searchParams.set('endDate', endDate);
        
        // Navigate to the URL
        window.location.href = url.toString();
    }

    // Handle other filter buttons
    document.querySelectorAll('.filter-btn[name="filterType"]').forEach(button => {
        // Remove active class from all buttons
        const allButtons = document.querySelectorAll('.filter-btn');
        allButtons.forEach(btn => btn.classList.remove('active'));
        
        // Add active class to current filter if it matches URL params
        const urlParams = new URLSearchParams(window.location.search);
        const currentFilter = urlParams.get('filterType');
        if (currentFilter && button.value === currentFilter) {
            button.classList.add('active');
        }
        
        button.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all buttons
            allButtons.forEach(btn => btn.classList.remove('active'));
            
            // Add active class to clicked button
            this.classList.add('active');
            
            // Create URL with filter parameter
            const url = new URL(window.location.origin + '/admin/dashboard');
            url.searchParams.set('filterType', this.value);
            
            // Navigate to the URL
            window.location.href = url.toString();
        });
    });

    // Set default active button if no filter is selected
    const urlParams = new URLSearchParams(window.location.search);
    const currentFilter = urlParams.get('filterType');
    if (!currentFilter) {
        // Default to yearly filter
        document.querySelector('.filter-btn[value="yearly"]').classList.add('active');
    }

    // Populate date inputs if custom filter is active
    if (currentFilter === 'custom') {
        const startDate = urlParams.get('startDate');
        const endDate = urlParams.get('endDate');
        if (startDate) document.querySelector('input[name="startDate"]').value = startDate;
        if (endDate) document.querySelector('input[name="endDate"]').value = endDate;
    }
</script>

